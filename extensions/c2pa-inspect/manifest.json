{
  "manifest_version": 3,
  "name": "C2PA Inspect",
  "version": "0.1.0",
  "description": "Inspect Content Credentials (C2PA) for images/videos via local native host.",
  "permissions": [
    "contextMenus",
    "storage",
    "nativeMessaging",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "C2PA Inspect"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "result.html",
        "result.js",
        "styles.css",
        "media_detect.js",
        "options.html",
        "options.js",
        "options.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
